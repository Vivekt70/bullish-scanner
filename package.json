{
  "name": "electron-bullish-screener",
  "version": "1.0.0",
  "description": "Bullish screener desktop app (Electron) - uses Yahoo Finance proxy",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "node build.js",
    "dist": "npm run build && electron-builder --win --x64"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "electron": "^25.3.0",
    "electron-builder": "^24.6.0",
    "esbuild": "^0.18.0"
  },
  "build": {
    "appId": "com.example.bullishscreener",
    "productName": "Bullish Screener",
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}